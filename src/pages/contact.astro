---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout
  title="Contact | DialedPPC — Amazon PPC Management"
  description="Submit your Amazon PPC account for review. Outsource Amazon PPC management to a dedicated specialist — honest assessment within two business days."
  active="contact"
  hasContact={true}
>

<section class="contact-hero">
  <div class="contact-hero-inner">
    <div class="section-label" style="color: var(--accent-green);">Contact</div>
    <h1>Inquire about management.</h1>
    <p>Every submission is reviewed individually. If your account and goals are a fit for the service, you'll hear back within two business days with next steps. If not, you'll hear that too.</p>
  </div>
</section>

<div class="channel-divider">
  <div class="line"></div>
  <div class="label">Submission</div>
  <div class="line"></div>
</div>

<ContactForm subtext="A few details about your brand and your advertising. Nothing here commits you to anything." />

<div class="channel-divider">
  <div class="line"></div>
  <div class="label">Output</div>
  <div class="line"></div>
</div>

</BaseLayout>

<style is:global>
  .contact-hero {
    padding: 8rem 2rem 3rem;
    background: linear-gradient(160deg, var(--bg-surface) 0%, var(--bg-deep) 100%);
  }

  .contact-hero-inner {
    max-width: 700px;
    margin: 0 auto;
  }

  .contact-hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .contact-hero p {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.7;
    max-width: 600px;
  }

  @media (max-width: 600px) {
    .contact-hero {
      padding: 6rem 1.25rem 2.5rem;
    }
  }
</style>
